generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nickname  String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  sleepAssessments SleepAssessment[]

  @@map("users")
}

enum AssessmentStatus {
  IN_PROGRESS
  COMPLETED
}

model SleepAssessment {
  id     String           @id @default(cuid())
  userId String           @map("user_id")
  status AssessmentStatus @default(IN_PROGRESS)

  // Assessment answers
  sleepStruggleDuration String? @map("sleep_struggle_duration") // "less_than_2_weeks", "2_to_6_weeks", "more_than_6_weeks"
  bedtime               String? // "1:50 am"
  wakeTime              String? @map("wake_time") // "10:00 am"
  sleepHours            Int?    @map("sleep_hours") // 6, 7, etc.

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sleep_assessments")
}
